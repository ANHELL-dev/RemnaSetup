https://$PANEL_DOMAIN {
    handle /api/* {
        reverse_proxy http://remnawave:$PANEL_PORT
    }

    handle /$LOGIN_ROUTE* {
        basicauth {
            $ADMIN_LOGIN $ADMIN_PASSWORD_HASH
        }
        uri strip_prefix /$LOGIN_ROUTE
        reverse_proxy http://remnawave:$PANEL_PORT
    }

    handle {
        respond 404
    }
}

:443 {
    tls internal
    respond 204
}
